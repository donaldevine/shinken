<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Iteration</th>
    <th>State</th>
    <th>Description</th>
    <th>Reason</th>
    <th>Startdate</th>
    <th>Completedate</th>
    <th>Effort</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.title %></td>
    <td><%= bug.iteration %></td>
    <td><%= bug.state %></td>
    <td><%= bug.description %></td>
    <td><%= bug.reason %></td>
    <td><%= bug.startdate %></td>
    <td><%= bug.completedate %></td>
    <td><%= bug.effort %></td>
    <td><%= bug.priority %></td>
    <td><%= link_to 'Show', bug %></td>
    <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
    <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

