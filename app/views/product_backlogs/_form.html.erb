<%= simple_form_for(@product_backlog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :iteration %>
    <%= f.input :state %>
    <%= f.input :description %>
    <%= f.input :reason %>
    <%= f.input :proposeddate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
